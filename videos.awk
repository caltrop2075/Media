BEGIN {
   FS="/"
}
# ==============================================================================
{
   des=""                                       # add process date to filename
   for(i=1;i<NF;i++)
      des=des$i"/"
   des=des d" "$NF

   sub(/\$/,"\\$")                              # $ -> \$
   sub(/\$/,"\\$",des)
   sub(/ \[.*\]/,"",des)                        # [anything]
   sub(/ \(.*\)/,"",des)                        # (anything)
   gsub(/_/," ",des)                            # _ -> spc
   do                                           # remove dbl spc
      n=gsub(/  /," ",des)
   while(n>0)
   sub(/ \./,".",des)                           # ' .???' -> ".???"
   sub(/ Just In at KnifeCenter.com/,"",des)    # misc

   if($0!=des)
   {
      printf("%s\n%s\n\n",$0,des)
      cmd="mv \""$0"\" \""des"\""
      # print cmd
      system(cmd)
   }
}
# ==============================================================================
END {
